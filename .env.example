# Telegram Token (required)
# Get this from @BotFather on Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Update interval in milliseconds (optional, default: 1500)
# Controls how often Telegram messages are updated during streaming
# Lower values = more real-time but higher API usage
# Higher values = less real-time but respects rate limits better
UPDATE_INTERVAL_MS=1500

# Maximum response length in characters (optional, default: 4000)
# Prevents memory issues with very long responses
# Telegram has a 4096 character limit per message anyway
MAX_RESPONSE_LENGTH=4000
