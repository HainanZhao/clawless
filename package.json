{
  "name": "gemini-bridge",
  "version": "0.0.1",
  "description": "A bridge connecting messaging bot to Agent Gemini CLI using Agent Communication Protocol (ACP)",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "gemini-bridge": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch ./bin/cli.ts",
    "start": "tsx ./bin/cli.ts",
    "cli": "tsx ./bin/cli.ts",
    "callback:health": "./scripts/callback-health.sh",
    "callback:test": "./scripts/callback-post.sh",
    "callback:test:chat": "./scripts/callback-post-chat.sh"
  },
  "keywords": [
    "telegram",
    "gemini",
    "acp",
    "agent",
    "ai"
  ],
  "author": "Hainan Zhao",
  "license": "MIT",
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.14.1",
    "dotenv": "^16.4.5",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
